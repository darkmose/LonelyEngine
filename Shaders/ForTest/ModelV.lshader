#version 330 core
layout (location = 0) in vec3 pos; 
layout (location = 1) in vec2 textPos;
layout (location = 2) in vec3 normal;
layout (location = 3) in mat4 poses;

layout (std140) uniform Matrices
{
	mat4 view;
	mat4 projection;
};

out	vec2 TexturePos;
out	vec3 FragPos;
out	vec3 Normal;

uniform mat4 model;

void main()
{
	FragPos = vec3(poses*vec4(pos,1));
	Normal = normalize(normal);
	gl_Position = projection * view * poses * vec4(pos,1);
	TexturePos = textPos;
}
