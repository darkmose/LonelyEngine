#version 330 core

in vec2 TexturePos;
in vec3 Normal;
in vec3 FragPos;

	
	uniform samplerCube sky;
	uniform vec3 cameraPos;
	out vec4 color;

void main()
{	
	float k = 1/1.309;
	vec3 I = normalize(FragPos - cameraPos);
    vec3 R = refract(I, normalize(Normal),k);
    color = vec4(texture(sky, R).rgb, 1.0);
}