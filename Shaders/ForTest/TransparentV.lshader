#version 330 core
layout (location = 0) in vec3 pos; 
layout (location = 1) in vec2 textPos;

struct MatrixMVP
{
	mat4 model;
	mat4 view;
	mat4 projection;
};
uniform MatrixMVP Matrix;

out vec2 TexPos;

void main()
{
	TexPos = textPos;
	gl_Position = Matrix.projection * Matrix.view * Matrix.model * vec4(pos,1);
}
