#version 330 core

layout (location = 0) in vec3 pos; 
layout (location = 2) in vec3 normal;

out vec3 Normal;
out vec3 FragPos;
out vec3 Pos;


layout (std140) uniform Matrices
{
	mat4 view;
	mat4 projection;
};

struct MatrixMVP
{
	mat4 model;
};

uniform MatrixMVP Matrix;


void main()
{
	Pos = pos;
    Normal = normal;
    FragPos = vec3(Matrix.model * vec4(pos, 1.0));
    gl_Position = projection * view * Matrix.model * vec4(pos, 1.0);
}
