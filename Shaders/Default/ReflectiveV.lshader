#version 330 core
layout (location = 0) in vec3 aPos; 
layout (location = 1) in vec3 aNormal;

out vec3 Normal;
out vec3 Position;
out vec3 TexPos;

struct MatrixMVP
{
	mat4 model;
	mat4 view;
	mat4 projection;
};
uniform MatrixMVP Matrix;


void main()
{
	TexPos = aPos;
    Normal = mat3(transpose(inverse(Matrix.model))) * aNormal;
    Position = vec3(Matrix.model * vec4(aPos, 1.0));
    gl_Position = Matrix.projection * Matrix.view * Matrix.model * vec4(aPos, 1.0);
}
