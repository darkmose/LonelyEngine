#version 330 core
layout (location = 0) in vec2 pos; 
layout (location = 1) in vec2 textPos;

layout (std140) uniform Matrices
{
	mat4 view;
	mat4 projection;
};

struct MatrixMVP
{
	mat4 model;
};
uniform MatrixMVP Matrix;

out vec2 TexPos;

void main()
{
	TexPos = textPos;
	gl_Position = projection * view * Matrix.model * vec4(pos,0,1);
}
